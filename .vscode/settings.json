{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/.ruff_cache": true,
        "**/demo_output": true,
        "**/.DS_Store": true,
        ".coverage": true,
        "coverage.xml": true,
        ".tox": true,
        "*.egg-info": true,
        "build": true,
        "dist": true,
        "venv": true,
        ".venv": true,
        "**/.git": false
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.nativeServer": "on",
    "ruff.configPath": "${workspaceFolder}/ruff.toml",
    "ruff.experimental.useCache": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.analysis.exclude": [
        "**/.pyenv",
        "**/site-packages",
        "**/dist",
        "**/build",
        "**/__pycache__",
        "venv",
        "env",
        ".venv",
        ".env",
        "**/.ruff_cache"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "warning",
        "reportMissingModuleSource": "warning"
    },
    "python.analysis.include": [
        "packages/pepperpy-core",
        "packages/pepperpy-ai",
        "packages/pepperpy-codebase",
        "packages/pepperpy-files",
        "packages/pepperpy-console",
        "packages/pepperpy-db"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.extraPaths": [
        "packages/pepperpy-console/pepperpy_console"
    ],
    "python.analysis.packageIndexDepths": [
        {
            "name": "pepperpy-core",
            "depth": 4
        }
    ]
}
