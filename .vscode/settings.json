{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/.ruff_cache": true,
        "**/demo_output": true,
        "**/.DS_Store": true,
        ".coverage": true,
        "coverage.xml": true,
        ".tox": true,
        "*.egg-info": true,
        "build": true,
        "dist": true,
        "venv": true,
        ".venv": true,
        "**/.git": false,
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit",
            "source.unusedImports": "explicit",
        },
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "ruff.lint.args": [],
    "ruff.format.args": [],
    /*"python.defaultInterpreterPath": "${env:PYTHONPATH}",*/
    "python.defaultInterpreterPath": "/home/pimentel/.cache/pypoetry/virtualenvs/pepperpy-gKIqzKmw-py3.12/bin/python",
    "python.analysis.exclude": [
        "**/.pyenv",
        "**/site-packages",
        "**/dist",
        "**/build",
        "**/__pycache__",
        "venv",
        "env",
        ".venv",
        ".env"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportMissingModuleSource": "none"
    },
    "python.analysis.include": ["pepperpy", "examples", "tests", "scripts"],
    "ruff.enable": true,
    "python.testing.pytestArgs": [
        "tests", "examples"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}
